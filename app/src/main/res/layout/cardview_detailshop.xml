<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" app:cardElevation="8dp" app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/browser_actions_bg_grey" android:layout_margin="4dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/fui_bgAnonymous"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="192dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginEnd="4dp" android:layout_marginStart="4dp"/>
        <ImageView
                android:layout_width="128dp"
                android:layout_height="128dp" app:srcCompat="@drawable/ic_shop"
                android:id="@+id/imageView3" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:scaleType="fitXY"/>
        <TextView
                android:text="店名"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shopNameTv"
                app:layout_constraintTop_toTopOf="@+id/imageView8" app:layout_constraintStart_toEndOf="@+id/imageView8"
                android:layout_marginStart="8dp" android:textSize="18dp"
                android:textColor="@color/browser_actions_text_color"/>
        <TextView
                android:text="電話"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shopPhoneTv"
                app:layout_constraintTop_toTopOf="@+id/imageView4" app:layout_constraintStart_toEndOf="@+id/imageView4"
                android:layout_marginStart="8dp" android:textSize="18dp"
                android:textColor="@color/browser_actions_text_color"/>
        <TextView
                android:text="開店時間"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shopOpenTv"
                app:layout_constraintTop_toTopOf="@+id/imageView6" app:layout_constraintStart_toEndOf="@+id/imageView6"
                android:layout_marginStart="8dp" android:textSize="18dp"
                android:textColor="@color/browser_actions_text_color"/>
        <TextView
                android:text="3.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shopStarTv"
                app:layout_constraintTop_toTopOf="@+id/imageView5" app:layout_constraintStart_toEndOf="@+id/imageView5"
                android:layout_marginStart="8dp" android:textSize="18dp"
                android:textColor="@color/browser_actions_text_color"/>
        <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp" app:srcCompat="@drawable/ic_phone"
                android:id="@+id/imageView4" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView8"
                app:layout_constraintStart_toEndOf="@+id/imageView3" android:layout_marginStart="8dp"/>
        <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp" app:srcCompat="@drawable/ic_star"
                android:id="@+id/imageView5"
                app:layout_constraintStart_toEndOf="@+id/imageView3" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView6"/>
        <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp" app:srcCompat="@drawable/ic_open"
                android:id="@+id/imageView6" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView4"
                app:layout_constraintStart_toEndOf="@+id/imageView3" android:layout_marginStart="8dp"/>
        <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp" app:srcCompat="@drawable/ic_googlemap"
                android:id="@+id/shopMapIg"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView3"
                app:layout_constraintStart_toStartOf="@+id/imageView3"/>
        <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp" app:srcCompat="@drawable/ic_shop"
                android:id="@+id/imageView8"
                app:layout_constraintTop_toTopOf="@+id/imageView3" app:layout_constraintStart_toEndOf="@+id/imageView3"
                android:layout_marginStart="8dp"/>
        <android.support.v7.widget.RecyclerView
                android:layout_width="360dp"
                android:layout_height="346dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="@+id/divider2"
                app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/shopMenu"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.538"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
