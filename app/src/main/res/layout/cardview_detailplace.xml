<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" app:cardCornerRadius="6dp" app:contentPadding="4dp"
        app:cardElevation="8dp" android:layout_margin="4dp">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detailPlaceNameTv" app:layout_constraintStart_toEndOf="@+id/detailPlacePictureImg"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/detailPlacePictureImg" android:textSize="20dp"
                android:textColor="@android:color/black"/>
        <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp" app:srcCompat="@drawable/ic_user_black"
                android:id="@+id/detailPlacePictureImg" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
        <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detailPlaceRatingBar" android:numStars="5"
                app:layout_constraintTop_toBottomOf="@+id/detailPlaceNameTv"
                app:layout_constraintStart_toEndOf="@+id/detailPlacePictureImg" android:layout_marginStart="8dp"
                android:rating="5" android:stepSize="1" style="@style/Widget.AppCompat.RatingBar.Indicator"/>
        <TextView
                android:text="Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detailPlaceTimeTv" app:layout_constraintStart_toEndOf="@+id/detailPlaceRatingBar"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/detailPlaceRatingBar"
                android:textColor="@android:color/black" android:textSize="14sp"/>
        <TextView
                android:text="好吃 好吃 好吃 好吃 好吃 好吃 好吃 好吃 好吃 好吃 好吃 好吃 好吃 好吃 好吃 好吃 好吃 "
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/detailPlaceCommentTv" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/detailPlacePictureImg"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:textSize="16sp" android:textColor="@android:color/black"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>

