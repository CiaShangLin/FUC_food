<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="Cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userSettingNameSpTv" app:layout_constraintStart_toEndOf="@+id/userSettingPictureSpImg"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/userSettingPictureSpImg"
            app:layout_constraintBottom_toBottomOf="@+id/userSettingPictureSpImg" android:textStyle="bold"
            android:textColor="@android:color/black" android:textSize="22dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp" app:srcCompat="@drawable/ic_cat"
            android:id="@+id/userSettingPictureSpImg" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>
