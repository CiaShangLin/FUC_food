<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:text="修改資訊"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="28dp" android:textColor="@android:color/black"/>
    <ImageView
            android:layout_width="@dimen/dialog_add_icon_width"
            android:layout_height="@dimen/dialog_add_icon_height" app:srcCompat="@drawable/ic_shop"
            android:id="@+id/imageView24" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" style="@style/dialog_icon"/>
    <ImageView
            android:layout_width="@dimen/dialog_add_icon_width"
            android:layout_height="@dimen/dialog_add_icon_height" app:srcCompat="@drawable/ic_open"
            android:id="@+id/imageView25" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView24" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" style="@style/dialog_icon"/>
    <ImageView
            android:layout_width="@dimen/dialog_add_icon_width"
            android:layout_height="@dimen/dialog_add_icon_height" app:srcCompat="@drawable/ic_phone"
            android:id="@+id/imageView26" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView25" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" style="@style/dialog_icon"/>
    <ImageView
            android:layout_width="@dimen/dialog_add_icon_width"
            android:layout_height="@dimen/dialog_add_icon_height" app:srcCompat="@drawable/ic_loaction"
            android:id="@+id/editShopGoogleMapImg" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView26" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" style="@style/dialog_icon"/>
    <ImageView
            android:layout_width="@dimen/dialog_add_icon_width"
            android:layout_height="@dimen/dialog_add_icon_height" app:srcCompat="@drawable/ic_shop_type"
            android:id="@+id/imageView29" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/editShopGoogleMapImg"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" style="@style/dialog_icon"/>
    <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/imageView24" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView24"
            app:layout_constraintBottom_toBottomOf="@+id/imageView24" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:id="@+id/editShopNameTvEt">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="店家名稱"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/imageView25" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView25"
            app:layout_constraintBottom_toBottomOf="@+id/imageView25" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/editShopOpenTvEt">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="營業時間"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/imageView26" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView26"
            app:layout_constraintBottom_toBottomOf="@+id/imageView26" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/editShopPhoneTvEt">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="連絡電話"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/editShopGoogleMapImg" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/editShopGoogleMapImg"
            app:layout_constraintBottom_toBottomOf="@+id/editShopGoogleMapImg" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:id="@+id/editShopAddressTvEt">

        <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="地點(點擊左邊圖示)"/>
    </android.support.design.widget.TextInputLayout>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editShopTagSp" app:layout_constraintStart_toEndOf="@+id/imageView29"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/imageView29"
            app:layout_constraintBottom_toBottomOf="@+id/imageView29"/>
    <Button
            android:text="提交修正"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editShopBt"
            app:layout_constraintBottom_toBottomOf="@+id/editShopMenuImg" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:background="@color/fui_bgAnonymous"
            android:textColor="@android:color/white" android:textStyle="bold" android:textSize="18sp"
            style="@style/dialog_button"/>
    <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp" app:srcCompat="@drawable/ic_shop_menu"
            android:id="@+id/editShopMenuImg"
            app:layout_constraintTop_toBottomOf="@+id/textView10" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:background="@android:color/darker_gray"/>
    <TextView
            android:text="菜單照片"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView29"
            app:layout_constraintStart_toStartOf="@+id/editShopMenuImg"
            app:layout_constraintEnd_toEndOf="@+id/editShopMenuImg" android:textColor="@android:color/black"/>
    <TextView
            android:text="@string/Add_Message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/editShopMenuImg" android:textColor="@android:color/black"
            android:textSize="18dp"/>
</android.support.constraint.ConstraintLayout>
