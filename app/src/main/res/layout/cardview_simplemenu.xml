<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="@dimen/cardview_height"
        android:layout_width="match_parent"
        app:cardCornerRadius="6dp"
        app:cardElevation="8dp" tools:layout_editor_absoluteY="204dp">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="@dimen/cardview_image_width"
                android:layout_height="@dimen/cardview_image_height"
                android:id="@+id/simpleMenuImg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_breakfast"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>
        <TextView
                android:text="菜名"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/simpleMenuName"
                android:textSize="22dp"
                android:textColor="@color/browser_actions_text_color"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/divider3"/>
        <TextView
                android:text="星數"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/simpleMenuStar"
                android:textSize="22dp"
                android:textColor="@color/browser_actions_text_color"
                app:layout_constraintTop_toTopOf="@+id/simpleMenuPrice"
                app:layout_constraintEnd_toStartOf="@+id/imageView3"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_star"
                android:id="@+id/imageView3" android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="@+id/simpleMenuStar"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="4dp"/>
        <View
                android:id="@+id/divider3"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/fui_bgAnonymous"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/simpleMenuImg" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
        />
        <TextView
                android:text="價錢"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/simpleMenuPrice" android:textSize="22dp"
                android:textColor="@color/browser_actions_text_color"
                app:layout_constraintTop_toBottomOf="@+id/simpleMenuName" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
